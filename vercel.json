{
  "redirects": [
    {
      "source": "/",
      "destination": "/body",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Content-Disposition",
          "value": "inline; filename=\"sitemap.xml\""
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!sitemap.xml|robots.txt|favicon.ico).*)",
      "destination": "/"
    }
  ]
}
