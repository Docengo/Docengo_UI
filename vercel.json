{
  "redirects": [
    {
      "source": "/",
      "destination": "/body",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Encoding", "value": "identity" },
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" },
        { "key": "Content-Type", "value": "application/xml" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!sitemap.xml|robots.txt|favicon.ico).*)",
      "destination": "/"
    }
  ]
}
